---
import "@/styles/global.css";
---

<header>
  <a class="logo" href="/">
    <img src="/logos/abhishek-minified.svg" alt="abhishek" />
  </a>
  <nav>
    <ul>
      <li><a href="/writings">writings</a></li>
      <li><a href="/resources">resources</a></li>
      <li><a href="/about">about</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-block: 20px;
    border-block-end: black solid 1px;
    grid-row: view-start / main-start;
  }
  .logo,
  .logo img {
    max-block-size: 20px;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 10px;
    font-size: var(--font-size--1);
  }
</style>
