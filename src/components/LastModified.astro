---
import { getLastModified } from "@utils/git";

// Props: pass in the file path and (optional) repoDir if content is in a submodule
const { filePath, repoDir = "." } = Astro.props;

// Grab last modified timestamp from git
const modified = getLastModified(filePath, repoDir);

// Format the date (you can customize locale/format)
const formatted = modified
  ? new Date(modified).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;
---

{formatted && <p>Last updated: {formatted}</p>}
