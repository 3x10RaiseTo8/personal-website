---
import { SITE } from "@/siteConfig";
const socials = [
  {
    title: "k@abhishe.com",
    href: SITE.contacts.email,
  },
  {
    title: "twitter",
    href: "/x",
  },
  {
    title: "github",
    href: "/github",
  },
  {
    title: "linkedin",
    href: "/linkedin",
  },
];
---

<footer>
  <section class="socials">
    {
      socials.map((social, index) => (
        <Fragment>
          <a class="social" href={social.href} target="_blank" rel="noopener">
            {social.title}
          </a>
          {index < socials.length - 1 && <span class="dot"> • </span>}
        </Fragment>
      ))
    }
  </section>

  <small>
    <p>© 2024—present Abhishek Singh</p>
    <p>
      The content is licensed under
      <a
        href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
        target="_blank"
        rel="noopener">CC BY-NC-SA 4.0</a
      >. The code is licensed under
      <a
        href="https://www.gnu.org/licenses/agpl-3.0.html"
        target="_blank"
        rel="noopener">GNU AGPL v3.0</a
      > and available <a
        href="https://github.com/3x10RaiseTo8/personal-website/">here</a
      >.
    </p></small
  >
</footer>

<style>
  footer {
    font-size: var(--font-size--1);
    text-align: center;
    grid-row: main-end / view-end;
    padding-block-end: 0.75rem;
  }

  small p {
    margin: 0;
    color: var(--tx-2);
  }

  .socials {
    padding-block: 20px;
  }
</style>
