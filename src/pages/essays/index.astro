---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("essays");
---

<Layout>
  <h1>Essays</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/essays/${post.id}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
