---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <section class="container">
    <h1>404</h1>
    <p id="message"></p>
    <div class="group">
      <button onclick="history.back()"> Go Back </button>
      <button>
        <a href="/">Go Home</a>
      </button>
    </div>
  </section>
</Layout>

<style>
  section {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
  }
  h1 {
    font-size: 2rem;
    font-weight: lighter;
  }

  p {
    padding-bottom: 1rem;
  }

  .group {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  button {
    padding: 0.5rem;
    transition: all 0.2s ease;
    cursor: pointer;
    border: 0;
    flex: 0 0 100%;
  }

  button:hover {
  }

  a {
    color: inherit;
    text-decoration: none;
  }
</style>

<script>
  const messages = [
    "Oops! You broke the Internet. Just kidding… but this page is missing.",
    "Well, this is awkward…",
    "You had ONE job, Internet!",
    "I think you took a wrong turn at Albuquerque.",
    "Page not found… but Bigfoot is!",
    "Error 404: The page escaped to the multiverse.",
    "The page you’re looking for is in another castle.",
    "Ctrl + Z won’t fix this one.",
    "We searched high and low… but no page here.",
    "Congratulations! You found a secret level… just kidding.",
    "I blame the intern for this.",
    "404: Error between chair and keyboard.",
    "Try blowing on your screen like an old Nintendo cartridge.",
    "These aren’t the droids you’re looking for.",
    "Houston, we have a problem.",
    "A wild 404 appeared! It used ‘Disappearing Act’!",
    "If a 404 page loads in the forest and no one sees it, does it exist?",
    "404: The page you seek is within you all along.",
  ];

  const messageElement = document.getElementById("message");
  if (messageElement) {
    messageElement.textContent =
      messages[Math.floor(Math.random() * messages.length)];
  }
</script>
